#!/bin/bash

if [ $# == 0 ]; then
  $0 "caf-measurement"
  $0 "actor-framework"
fi

if [ "$1" == "caf-measurement" ]; then
  cd caf-measurement
  git fetch
  git checkout -f origin/master

  cd numa/distance
  qmake
  make

  cd ../libnuma
  qmake
  make

  cd ../hwloc
  qmake
  make
fi

if [ "$1" == "actor-framework" ]; then
  cd actor-framework
  git fetch
  git checkout -f origin/topic/update_benchmarks

  cd benchmarks
  git fetch
  git checkout -f origin/topic/update_benchmarks

  cd ..
  ./configure
  make -j
fi
